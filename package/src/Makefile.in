# Compilers
EXT := cu

CXX := g++
NVCC := @NVCC@
CXXFLAGS := @CXXFLAGS@
NVCCFLAGS := @NCFLAGS@
CFLAGS := @CFLAGS@
NCFLAGS := @NCFLAGS@
LDFLAGS := @LDFLAGS@
LIBS := @LIBS@
CUDA_INC := -I@CUDA_INC@

# Program-specifics
TARGET := gwas.lasso.so
OBJS := gwas.lasso.o

HEADERS := \
	$(wildcard *.h) 

SOURCES := \
	$(wildcard *.cpp) \
	$(wildcard *.c) \
	$(wildcard *.cu)


#====  derived variables  =====================================================

OBJECTS := \
	${patsubst %.cpp,%.o,${filter %.cpp,$(SOURCES)}} \
	${patsubst %.c,%.o,${filter %.c,$(SOURCES)}} \
	${patsubst %.cu,%.o,${filter %.cu,$(SOURCES)}}


# Build rules
.SUFFIXES: .cu .o

all: $(TARGET)

$(TARGET) : $(OBJECTS)
	$(NVCC) -shared $(CUDA_INC) $(LDFLAGS) $(LIBS) $(OBJECTS) -o $@ 

%.o : %.c $(PRECOMPILED_HEADER)
	$(CC) $(CFLAGS) -c $< -o $@

%.o : %.cpp $(PRECOMPILED_HEADER)
	$(CXX) $(CXXFLAGS) -c $< -o $@

%.o : %.cu
	$(NVCC) $(NVCCFLAGS) -c $< -o $@

clean:
	rm -rf $(OBJECTS) $(TARGET)

